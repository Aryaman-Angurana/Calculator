#: import utils kivy.utils

<Button>
    background_normal: ""
    background_color: utils.get_color_from_hex("#ADD8E6")
    color: (0,0,0,1)

<MyLayout>

    b1: b1
    b2: b2
    BoxLayout:
        orientation: "vertical"
        size: root.width , root.height

        padding: 10
        spacing: 10

        TextInput:
            id: b1
            color: (0,0,0,1)
            multiline: True


        TextInput:
            id: b2
            color : (0,0,0,1)
            multiline: False


        BoxLayout:
            orientation: "horizontal"
            size: root.width , root.height

            spacing: 10

            Button:
                text: "Clear"
                on_press: root.clear()
            
            
            BoxLayout:
                orientation: "horizontal"
                size: root.width , root.height

                spacing : 10
                Button:
                    text: "/"
                    on_press: root.div()
                    size_hint: (0.5,1)
            
                Button:
                    text: "<<<"
                    on_press: root.back()
                    size_hint: (0.5,1)


        BoxLayout:
            orientation: "horizontal"
            size: root.width , root.height

            spacing: 10

            Button:
                text: "7"
                on_press: root.text("7")
            
            Button:
                text: "8"
                on_press: root.text("8")
            
            Button:
                text: "9"
                on_press: root.text("9")
            
            Button:
                text: "*"
                on_press: root.mul()


        BoxLayout:
            orientation: "horizontal"
            size: root.width , root.height

            spacing: 10

            Button:
                text: "4"
                on_press: root.text("4")
            
            Button:
                text: "5"
                on_press: root.text("5")
            
            Button:
                text: "6"
                on_press: root.text("6")
            
            Button:
                text: "-"
                on_press: root.sub()


        BoxLayout:
            orientation: "horizontal"
            size: root.width , root.height

            spacing: 10

            Button:
                text: "1"
                on_press: root.text("1")
            
            Button:
                text: "2"
                on_press: root.text("2")
            
            Button:
                text: "3"
                on_press: root.text("3")
            
            Button:
                text: "+"
                on_press: root.add()

        
        BoxLayout:
            orientation: "horizontal"
            size: root.width , root.height

            spacing: 10

            Button:
                text: "+/-"
                on_press: root.change_sign()
            
            Button:
                text: "0"
                on_press: root.text("0")
            
            Button:
                text: "."
                on_press: root.text(".")
            
            Button:
                text: "="
                on_press: root.equal()